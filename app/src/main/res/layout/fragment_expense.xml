<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.savvy.hrmsnewapp.saleForce.ExpenseFragment">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_marginRight="10dip"
                   android:layout_marginLeft="10dip"
                   android:layout_marginTop="10dp"
                   android:layout_weight="1"
                   android:gravity="center_vertical">

                   <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                       android:id="@+id/txtTitle_travelType"
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="3.55"
                       android:gravity="center_vertical"
                       android:paddingLeft="5dip"
                       android:text="Select Category *"
                       android:textColor="@color/my_custom_color"
                       android:textSize="@dimen/text_size"
                       android:textStyle="bold"
                       app:font="@string/font_name_light" />

                   <Spinner
                       android:id="@+id/spin_custVisit_Purpose"
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="5.5"
                       android:paddingLeft="10dip"
                       android:background="@drawable/spin_border_new"
                       android:gravity="center_vertical"
                       android:textColor="@color/my_custom_color"
                       android:textSize="@dimen/text_size"
                       app:font="@string/font_name_light" />

                   <ImageView
                       android:layout_width="0dip"
                       android:layout_height="35dp"
                       android:layout_marginLeft="-2dp"
                       android:layout_weight="1"
                       android:background="@drawable/spin_border_new"
                       android:padding="10dp"
                       android:src="@drawable/arrow_down" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_marginLeft="10dip"
                   android:layout_marginRight="10dip"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="2.5"
                       android:gravity="center_vertical"
                       android:paddingLeft="5dip"
                       android:text="Expense Head *"
                       android:textColor="@color/my_custom_color"
                       android:textSize="@dimen/text_size"
                       android:textStyle="bold"
                       app:font="@string/font_name_light" />

                   <EditText
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="4.5"
                       android:background="@drawable/spin_border_new"
                       android:gravity="center_vertical"
                       android:hint="Enter Expense Head"
                       android:paddingLeft="10dip"
                       android:singleLine="true"
                       android:textColor="@color/my_custom_color"
                       android:textColorHint="@color/color_gray"
                       android:textSize="@dimen/text_size"
                       android:textStyle="normal"
                       app:font="@string/font_name_light" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_marginLeft="10dip"
                   android:layout_marginRight="10dip"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="2.5"
                       android:gravity="center_vertical"
                       android:paddingLeft="5dip"
                       android:text="Expense Amount *"
                       android:textColor="@color/my_custom_color"
                       android:textSize="@dimen/text_size"
                       android:textStyle="bold"
                       app:font="@string/font_name_light" />

                   <EditText
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_weight="4.5"
                       android:background="@drawable/spin_border_new"
                       android:gravity="center_vertical"
                       android:hint="Enter Expense Amount"
                       android:paddingLeft="10dip"
                       android:singleLine="true"
                       android:textColor="@color/my_custom_color"
                       android:textColorHint="@color/color_gray"
                       android:textSize="@dimen/text_size"
                       android:textStyle="normal"
                       app:font="@string/font_name_light" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_marginLeft="10dip"
                       android:layout_weight="2.8"
                       android:gravity="center_vertical"
                       android:paddingLeft="5dip"
                       android:text="Time"
                       android:textColor="@color/my_custom_color"
                       android:textSize="@dimen/text_size"
                       android:textStyle="bold"
                       app:font="@string/font_name_light" />

                   <Button
                       android:id="@+id/btn_custVisit_startDate"
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_marginRight="5dip"
                       android:layout_weight="2.9"
                       android:background="@drawable/spin_border_new"
                       android:gravity="center"
                       android:hint="Pick Date"
                       android:paddingLeft="10dip"
                       android:textColor="@color/my_custom_color"
                       android:textColorHint="@color/color_gray"
                       android:textSize="@dimen/text_size"
                       android:textStyle="normal"
                       app:font="@string/font_name_light" />

                   <Button
                       android:id="@+id/btn_custVisit_StartTime"
                       android:layout_width="0dip"
                       android:layout_height="35dip"
                       android:layout_marginRight="10dip"
                       android:layout_weight="2"
                       android:background="@drawable/spin_border_new"
                       android:gravity="center"
                       android:hint="Pick Time"
                       android:paddingLeft="10dip"
                       android:textColor="@color/my_custom_color"
                       android:textColorHint="@color/color_gray"
                       android:textSize="@dimen/text_size"
                       android:textStyle="normal"
                       app:font="@string/font_name_light" />
               </LinearLayout>

               <LinearLayout
                   android:layout_marginTop="5dip"
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:orientation="vertical"
                   android:layout_weight="1.7">
                   <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                       android:layout_width="match_parent"
                       android:layout_height="0dip"
                       android:layout_weight="0.7"
                       android:text="Capture or Select Picture"
                       android:paddingLeft="15dip"
                       android:textColor="@color/my_custom_color"
                       android:textStyle="bold"
                       android:textSize="@dimen/text_size"
                       android:gravity="center_vertical"
                       app:font="@string/font_name_light"/>

                   <RadioGroup
                       android:layout_width="match_parent"
                       android:layout_height="0dip"
                       android:layout_weight="1"
                       android:orientation="horizontal">
                       <RadioButton
                           android:layout_marginLeft="10dip"
                           android:paddingLeft="15dip"
                           android:textColor="@color/my_custom_color"
                           android:textStyle="bold"
                           android:textSize="@dimen/text_size"
                           android:gravity="center_vertical"
                           app:font="@string/font_name_light"
                           android:layout_weight="1"
                           android:layout_width="0dip"
                           android:layout_height="wrap_content"
                           android:text="Camera"/>
                       <RadioButton
                           android:layout_weight="1"
                           android:layout_width="0dip"
                           android:paddingLeft="15dip"
                           android:textColor="@color/my_custom_color"
                           android:textStyle="bold"
                           android:textSize="@dimen/text_size"
                           android:gravity="center_vertical"
                           app:font="@string/font_name_light"
                           android:layout_height="wrap_content"
                           android:text="Galary"/>
                   </RadioGroup>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_marginLeft="10dip"
                   android:layout_marginRight="10dip"
                   android:layout_weight="3"
                   android:background="#a0a0a0"
                   android:gravity="center_vertical">

                   <ImageView
                       android:background="@drawable/border_custom_new"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="0dip"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dip"
                   android:layout_weight="1"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <Button
                       android:id="@+id/btn_custVisit_Save"
                       android:layout_width="100dip"
                       android:layout_height="35dp"
                       android:layout_marginRight="3dp"
                       android:layout_weight="5"
                       android:background="@drawable/button_border_cancel"
                       android:gravity="center"
                       android:text="Save"
                       android:textColor="#fff"
                       android:textStyle="bold" />

                   <Button
                       android:id="@+id/btn_custVisit_Cancel"
                       android:layout_width="100dp"
                       android:layout_height="35dp"
                       android:layout_marginLeft="3dp"
                       android:layout_weight="5"
                       android:background="@drawable/button_border_cancel"
                       android:gravity="center"
                       android:text="Cancel"
                       android:textColor="#fff"
                       android:textStyle="bold" />

               </LinearLayout>


           </LinearLayout>
</LinearLayout>
