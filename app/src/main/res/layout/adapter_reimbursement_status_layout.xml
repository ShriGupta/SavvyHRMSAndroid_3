<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/token_no"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_token_no"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/reim_type"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_reim_type"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/month"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_month"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/year"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_year"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/status"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/n_tax_amt"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_n_text_amount"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="@string/tax_amt"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tv_tax_amount"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/remarks"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/tv_reason"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="2">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_pull_back"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="@string/pull_back"
                android:textColor="#fff"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/color_red" />

</LinearLayout>
