<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dip"
    android:layout_marginRight="10dip"
    android:layout_marginLeft="10dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/sale_contact_list_of_contact"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="Name of Customer"
            android:textColor="@color/my_custom_color"
            android:textSize="12dip"
            app:font="@string/font_name_bold" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/sale_contact_phone"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/my_custom_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            app:font="@string/font_name_light"
            android:layout_marginRight="5dip"
            android:drawablePadding="0dip"
            android:paddingLeft="15dip"
            android:drawableLeft="@drawable/ic_phone_black_18dp"/>

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/sale_contact_message"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/my_custom_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            app:font="@string/font_name_light"
            android:layout_marginRight="5dip"
            android:drawablePadding="0dip"
            android:paddingLeft="15dip"
            android:drawableLeft="@drawable/ic_message_black_18dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#8b0a0a"/>


</LinearLayout>
