<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.savvy.hrmsnewapp.fragment.ResignationFragmentHolder">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:weightSum="10">


                <LinearLayout
                    android:id="@+id/resignation_linear2"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:weightSum="3"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    >
                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/resignation_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2.8"
                        android:background="#fff"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/my_custom_color"
                        android:text="Resignation Request"/>

                    <ImageView
                        android:id="@+id/line_status1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.2"
                        android:visibility="visible"
                        android:background="@color/colorPrimaryDark"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/resignation_linear1"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="5"
                    android:weightSum="3"
                    android:background="#fff"
                    android:orientation="vertical"
                    >
                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/resignation_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2.8"
                        android:background="#fff"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/my_custom_color"
                        android:text="Resignation Status"/>

                    <ImageView
                        android:layout_gravity="bottom"
                        android:foregroundGravity="bottom"
                        android:id="@+id/line_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.2"
                        android:visibility="visible"
                        android:background="@color/colorPrimaryDark"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="9">

                <FrameLayout
                    android:background="#fff"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/frame_resignation_holder">

                </FrameLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
