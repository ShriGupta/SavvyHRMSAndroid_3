<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_custom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center|start"
                        android:paddingLeft="10dp"
                        android:text="From Date :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhRequest_fromDate"
                        android:layout_width="0dip"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:font="@string/font_name_light"
                        android:hint="Pick Date"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="start|center"
                        android:paddingLeft="10dp"
                        android:text="To Date :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhRequest_toDate"
                        android:layout_width="0dip"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:font="@string/font_name_light"
                        android:hint="Pick Date"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/whfRequestLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/whfRequestCompareDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/border_custom"
                        android:font="@string/font_name_light"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="start|center"
                        android:paddingLeft="10dp"
                        android:text="Log In  (Work Started)\nTime(HH:MM AM/PM):"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhRequest_fromTime"
                        android:layout_width="0dip"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:font="@string/font_name_light"
                        android:hint="Pick Time"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="start|center"
                        android:paddingLeft="10dp"
                        android:text="Log Out (Work Ended)\nTime(HH:MM AM/PM):"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhRequest_toTime"
                        android:layout_width="0dip"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:font="@string/font_name_light"
                        android:hint="Pick Time"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="start|center"
                        android:paddingLeft="10sp"
                        android:text="Reason :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/wfhRequest_Reason"
                        android:layout_width="0dip"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="7.5"
                        android:background="@drawable/border_custom"
                        android:hint="Enter Reason"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <Button
                        android:id="@+id/whfRequestSendButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/button_border_cancel"
                        android:backgroundTint="@color/color_red"
                        android:text="Send Request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/whfRequestResetButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_border_cancel"
                        android:backgroundTint="@color/color_red"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_gray"
                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_custom"
                android:orientation="vertical"
                android:weightSum="12">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4.5"
                            android:gravity="center_vertical"
                            android:text="From Date"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/wfhStatus_fromDate"
                            android:layout_width="0dip"
                            android:layout_height="35dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="5.5"
                            android:background="@drawable/border_custom"
                            android:font="@string/font_name_light"
                            android:gravity="center"
                            android:hint="Pick Date"
                            android:paddingLeft="5sp"
                            android:paddingRight="10dp"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/color_gray"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="To Date"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/wfhStatus_toDate"
                            android:layout_width="0dip"
                            android:layout_height="35dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="6"
                            android:background="@drawable/border_custom"
                            android:font="@string/font_name_light"
                            android:gravity="center"
                            android:hint="Pick Date"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/color_gray"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wfhStatus_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/wfhStatus_compareDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_red"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_custom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/opeStatusTextview"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="Status"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhStatus_SpinButton"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="5.5"
                        android:background="@drawable/border_custom"
                        android:drawableRight="@drawable/down_arrow"
                        android:font="@string/font_name_light"
                        android:gravity="center_vertical"
                        android:hint="Please Select"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/wfhStatus_SearchButton"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_border_cancel"
                        android:text="Search"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/opeImg_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="10"
                    android:background="@drawable/border_custom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_custom"
                        android:orientation="vertical">


                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txt_wfhStatus_DataNotFount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Data Not Found"
                            android:textColor="@color/color_red"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/wfhStatus_RecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="350dp">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>