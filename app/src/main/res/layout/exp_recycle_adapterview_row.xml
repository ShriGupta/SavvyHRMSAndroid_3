<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/con_header"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_type"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Exp. Type"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_bill_no"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Bill No."
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_Date"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Bill Date"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_amount"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Bill Amount"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_reason"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Reason"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/expense_displayName"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:text="Display Name"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/expense_actualName"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Actual Name"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_action"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_border"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Edit"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size"
                    android:visibility="gone" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/exp_remove"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_border"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Remove"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
