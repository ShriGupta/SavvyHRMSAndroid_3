<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">


        <!-- <RelativeLayout
             android:layout_width="185dp"
             android:layout_height="185dp"
             android:background="@drawable/face_camera_border_shape"
             android:gravity="center">


             <com.savvy.hrmsnewapp.utils.RoundedImageView
                 android:id="@+id/roundImageView"
                 android:layout_width="180dp"
                 android:layout_height="180dp" />

         </RelativeLayout>-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/newImageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circulerImageView" />

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="18dp"
            android:background="@drawable/circuler_bordershape"
            android:gravity="center">

            <com.savvy.hrmsnewapp.utils.RoundedImageView
                android:id="@+id/selectCameraImage"
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </RelativeLayout>


    </FrameLayout>

    <Button
        android:id="@+id/send_Approval_Button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_border_cancel"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/send_for_approval"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>