<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Source :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseSource"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Destination :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseDestination"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Departure Date :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseDepartureDate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Return Date :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color"/>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseReturnDate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Mode  :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color"/>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseMode"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="class :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseClass"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Start Time :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseStartTime"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="End Time :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseEndTime"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Type  :"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/travelExpenseType"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textSize="@dimen/text_size"
                android:textColor="@color/my_custom_color"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_red"
            android:src="@drawable/line" />
    </LinearLayout>


</LinearLayout>