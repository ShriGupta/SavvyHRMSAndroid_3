<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddAccommodationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="At City :" />

            <EditText
                android:id="@+id/edt_city"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/border_custom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="start|center"
                android:text="From Date :" />

            <Button
                android:id="@+id/accommodationFromDate"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="2.5"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="Pick Date"
                android:textSize="@dimen/text_size" />


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="To Date: " />

            <Button
                android:id="@+id/accommodationToDate"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="2.5"
                android:background="@drawable/border_custom"
                android:hint="Pick Date"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/copareAccommodationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/compareAccommodationTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_red"
                android:textSize="10dp"
                app:font="@string/font_name_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="start|center"
                android:text="Check In Time:" />

            <Button
                android:id="@+id/accomoodationCheckinTime"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="2"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="Pick Time"
                android:textSize="@dimen/text_size" />


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Check Out Time :" />

            <Button
                android:id="@+id/accommodationCheckoutTime"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="2"
                android:background="@drawable/border_custom"
                android:hint="Pick Time"
                android:textSize="@dimen/text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="start|center"
                android:text="Preferred Hotel Location" />

            <EditText
                android:id="@+id/edt_HotelLocation"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="5"
                android:background="@drawable/border_custom"
                android:hint="Label"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="50dp"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_addAccommodation"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="3"
                android:background="@color/color_red"
                android:text="Add"
                android:textColor="#ffff" />


            <Button
                android:id="@+id/btn_addCloseAccomodation"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="4"
                android:background="@color/color_red"
                android:text="Add &amp; Close"
                android:textColor="#ffff" />


            <Button
                android:id="@+id/close_accommodationButton"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="3"
                android:background="@color/color_red"
                android:text="Close"
                android:textColor="#ffff" />
        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>