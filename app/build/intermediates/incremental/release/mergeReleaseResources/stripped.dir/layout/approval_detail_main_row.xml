<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/dialog_header"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:text="Conveyance Detail"
            android:gravity="bottom"
            android:textColor="@color/my_custom_color"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView

        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.1dp"
        android:background="@color/color_red"
        android:layout_marginBottom="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetailVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <Button
            android:id="@+id/btn_saveDetailVoucher"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/button_border"
            android:layout_gravity="center"/>

        <Button
            android:layout_toRightOf="@+id/btn_saveDetailVoucher"
            android:id="@+id/btn_closeDetailVoucher"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Close"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/button_border"
            android:layout_gravity="center"/>

    </RelativeLayout>



</LinearLayout>
