<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.savvy.hrmsnewapp.saleForce.OutComeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_marginTop="5dip"
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:orientation="vertical"
               android:layout_weight="1.7">
               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="0.7"
                   android:text="How did the visit go ?"
                   android:paddingLeft="15dip"
                   android:textColor="@color/my_custom_color"
                   android:textStyle="bold"
                   android:textSize="@dimen/text_size"
                   android:gravity="center_vertical"
                   app:font="@string/font_name_light"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <RadioButton
                       android:layout_marginLeft="10dip"
                       android:paddingLeft="15dip"
                       android:textColor="@color/my_custom_color"
                       android:textStyle="bold"
                       android:textSize="@dimen/text_size"
                       android:gravity="center_vertical"
                       app:font="@string/font_name_light"
                       android:layout_weight="1"
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:text="Good"/>
                   <RadioButton
                       android:layout_weight="1"
                       android:layout_width="0dip"
                       android:paddingLeft="15dip"
                       android:textColor="@color/my_custom_color"
                       android:textStyle="bold"
                       android:textSize="@dimen/text_size"
                       android:gravity="center_vertical"
                       app:font="@string/font_name_light"
                       android:layout_height="wrap_content"
                       android:text="Bad"/>
               </RadioGroup>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:orientation="vertical"
               android:layout_weight="2.5">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="0.6"
                   android:text="Description"
                   android:paddingLeft="15dip"
                   android:textColor="@color/my_custom_color"
                   android:textStyle="bold"
                   android:textSize="@dimen/text_size"
                   android:gravity="center_vertical"
                   app:font="@string/font_name_light"/>
               <EditText
                   android:layout_marginLeft="10dip"
                   android:layout_marginRight="10dip"
                   android:background="@drawable/border_custom_new"
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:hint="Description"
                   android:textSize="@dimen/text_size"
                   android:textStyle="bold"
                   android:textColor="@color/my_custom_color"
                   app:font="@string/font_name_light"
                   android:gravity="left|top"
                   android:paddingLeft="10dip"
                   android:paddingTop="5dip"
                   android:maxLines="10"
                   android:ems="10"
                   android:lines="6"
                   android:scrollbars="vertical"
                   android:layout_weight="1.9"/>
           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="5dip"
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:orientation="vertical"
               android:layout_weight="1.7">
               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="0.7"
                   android:text="What is the Next Action ?"
                   android:paddingLeft="15dip"
                   android:textColor="@color/my_custom_color"
                   android:textStyle="bold"
                   android:textSize="@dimen/text_size"
                   android:gravity="center_vertical"
                   app:font="@string/font_name_light"/>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <RadioButton
                       android:layout_marginLeft="10dip"
                       android:paddingLeft="15dip"
                       android:textColor="@color/my_custom_color"
                       android:textStyle="bold"
                       android:textSize="@dimen/text_size"
                       android:gravity="center_vertical"
                       app:font="@string/font_name_light"
                       android:layout_weight="1"
                       android:layout_width="0dip"
                       android:layout_height="wrap_content"
                       android:text="Meeting"/>
                   <RadioButton
                       android:layout_weight="1"
                       android:layout_width="0dip"
                       android:paddingLeft="15dip"
                       android:textColor="@color/my_custom_color"
                       android:textStyle="bold"
                       android:textSize="@dimen/text_size"
                       android:gravity="center_vertical"
                       app:font="@string/font_name_light"
                       android:layout_height="wrap_content"
                       android:text="Call"/>
               </RadioGroup>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:layout_marginRight="10dip"
               android:layout_marginLeft="10dip"
               android:gravity="center_vertical"
               android:layout_weight="1">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="When ? "
                   android:paddingLeft="5dip"
                   android:textColor="@color/my_custom_color"
                   android:textStyle="bold"
                   android:textSize="14dip"
                   android:gravity="center_vertical"
                   app:font="@string/font_name_light"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:layout_weight="1.2"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginLeft="10dip"
                   android:layout_weight="2.1"
                   android:gravity="center_vertical"
                   android:paddingLeft="5dip"
                   android:text="Start Date *"
                   android:textColor="@color/my_custom_color"
                   android:textSize="@dimen/text_size"
                   android:textStyle="bold"
                   app:font="@string/font_name_light" />

               <Button
                   android:id="@+id/btn_custVisit_startDate"
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginRight="5dip"
                   android:layout_weight="2.9"
                   android:background="@drawable/spin_border_new"
                   android:gravity="center"
                   android:hint="Pick Date"
                   android:paddingLeft="10dip"
                   android:textColor="@color/my_custom_color"
                   android:textColorHint="@color/color_gray"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   app:font="@string/font_name_light" />

               <Button
                   android:id="@+id/btn_custVisit_StartTime"
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginRight="10dip"
                   android:layout_weight="2"
                   android:background="@drawable/spin_border_new"
                   android:gravity="center"
                   android:hint="Pick Time"
                   android:paddingLeft="10dip"
                   android:textColor="@color/my_custom_color"
                   android:textColorHint="@color/color_gray"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   app:font="@string/font_name_light" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:layout_weight="1.2"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginLeft="10dip"
                   android:layout_weight="2.1"
                   android:gravity="center_vertical"
                   android:paddingLeft="5dip"
                   android:text="Ends Date *"
                   android:textColor="@color/my_custom_color"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   app:font="@string/font_name_light" />

               <Button
                   android:id="@+id/btn_custVisit_EndDate"
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginRight="5dip"
                   android:layout_weight="2.9"
                   android:background="@drawable/spin_border_new"
                   android:gravity="center"
                   android:hint="Pick Date"
                   android:paddingLeft="10dip"
                   android:textColor="@color/my_custom_color"
                   android:textColorHint="@color/color_gray"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   android:visibility="invisible"
                   app:font="@string/font_name_light" />

               <Button
                   android:id="@+id/btn_custVisit_EndTime"
                   android:layout_width="0dip"
                   android:layout_height="35dip"
                   android:layout_marginRight="10dip"
                   android:layout_weight="2"
                   android:background="@drawable/spin_border_new"
                   android:gravity="center"
                   android:hint="Pick Time"
                   android:paddingLeft="10dip"
                   android:textColor="@color/my_custom_color"
                   android:textColorHint="@color/color_gray"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   app:font="@string/font_name_light" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:layout_marginLeft="10dip"
               android:layout_marginRight="10dip"
               android:layout_weight="1.4"
               android:layout_marginTop="5dip"
               android:gravity="center_vertical">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:id="@+id/edt_custVisit_selectedPurpose"
                   android:layout_width="match_parent"
                   android:layout_height="40dip"
                   android:background="@drawable/spin_border_new"
                   android:gravity="center_vertical"
                   android:hint="Selected Purpose (Subject)"
                   android:paddingLeft="15dip"
                   android:textColor="@color/my_custom_color"
                   android:textSize="@dimen/text_size"
                   android:textStyle="bold"
                   app:font="@string/font_name_bold" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:layout_marginLeft="10dip"
               android:layout_marginRight="10dip"
               android:layout_marginTop="10dip"
               android:layout_weight="3.6"
               android:gravity="center_vertical"
               android:orientation="vertical"
               android:weightSum="4">

               <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="0.7"
                   android:gravity="center_vertical"
                   android:paddingLeft="5dip"
                   android:text="Description *"
                   android:textColor="@color/my_custom_color"
                   android:textSize="@dimen/text_size"
                   android:textStyle="bold"
                   app:font="@string/font_name_light" />

               <EditText
                   android:id="@+id/edt_custVisit_Description"
                   android:layout_width="match_parent"
                   android:layout_height="0dip"
                   android:layout_weight="3.3"
                   android:background="@drawable/spin_border_new"
                   android:cursorVisible="false"
                   android:gravity="top|left"
                   android:hint="Description"
                   android:lines="6"
                   android:maxLines="10"
                   android:paddingLeft="10dip"
                   android:paddingTop="5dip"
                   android:scrollbars="vertical"
                   android:textColor="@color/my_custom_color"
                   android:textColorHint="@color/color_gray"
                   android:textSize="@dimen/text_size"
                   android:textStyle="normal"
                   app:font="@string/font_name_light" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="0dip"
               android:layout_gravity="center"
               android:layout_marginTop="15dp"
               android:layout_weight="1"
               android:layout_marginBottom="20dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <Button
                   android:layout_width="100dip"
                   android:layout_height="35dp"
                   android:layout_marginRight="3dp"
                   android:layout_weight="5"
                   android:background="@drawable/button_border_cancel"
                   android:gravity="center"
                   android:text="Save"
                   android:textColor="#fff"
                   android:textStyle="bold" />

               <Button
                   android:layout_width="100dp"
                   android:layout_height="35dp"
                   android:layout_marginLeft="3dp"
                   android:layout_weight="5"
                   android:background="@drawable/button_border_cancel"
                   android:gravity="center"
                   android:text="Cancel"
                   android:textColor="#fff"
                   android:textStyle="bold" />

           </LinearLayout>


       </LinearLayout>
    </ScrollView>

</LinearLayout>
