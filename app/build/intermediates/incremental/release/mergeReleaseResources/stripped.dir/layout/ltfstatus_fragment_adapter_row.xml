<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Token No. :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_TokenNo"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Status :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_Status"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="From Date :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_FromDate"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="To Date :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_ToDate"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Action By :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_ActionBy"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Action Date:"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_ActionDate"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="Leave Name :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/LTF_LeaveName"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="7">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Reason :"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/LTF_Reason"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4.4"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end">

                <Button
                    android:id="@+id/LTF_PullBack"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Pull Back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_red"
            android:src="@drawable/line">

        </ImageView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>