<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    android:background="#fff"
    tools:context="com.savvy.hrmsnewapp.fragment.ChangePasswordFragment">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="CHANGE PASSWORD"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/title_oldPassword"
            android:layout_width="0dip"
            app:font="@string/font_name_light"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/my_custom_color"
            android:text="Old Password *"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/chng_old_password"
            android:paddingLeft="15dp"
            android:layout_weight="6"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/my_custom_color"
            android:textColorHint="@color/color_gray"
            android:layout_width="0dip"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:background="@drawable/border_custom_new"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/title_newPassword"
            android:layout_width="0dip"
            app:font="@string/font_name_light"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/my_custom_color"
            android:text="New Password *"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/chng_new_password"
            android:paddingLeft="15dp"
            android:layout_weight="6"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/my_custom_color"
            android:textColorHint="@color/color_gray"
            android:layout_width="0dip"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:background="@drawable/border_custom_new"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/title_retype"
            android:layout_width="0dip"
            app:font="@string/font_name_light"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/my_custom_color"
            android:text="Retype Password *"
            android:layout_weight="4"/>

        <EditText
            android:id="@+id/chng_retype_password"
            android:paddingLeft="15dp"
            android:layout_weight="6"
            android:hint="Retype Password"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textColor="@color/my_custom_color"
            android:textColorHint="@color/color_gray"
            android:layout_width="0dip"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:background="@drawable/border_custom_new"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chng_submit_password"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="Apply"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#fff"
            android:background="@drawable/button_border"/>
        <Button
            android:id="@+id/chng_back_password"
            android:gravity="center"
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#fff"
            android:background="@drawable/button_border"/>


    </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
