<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_title"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:text="Select Image Source : -"
                android:layout_marginLeft="20sp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:text="" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_custom_new"
            android:drawableLeft="@drawable/rsz_gallery"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="20sp"
            android:textSize="12sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="Import From Galary"/>

        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_custom_new"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/rsz_camera"
            android:paddingLeft="10dp"
            android:layout_marginTop="20sp"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="Open Camera"
            android:layout_marginBottom="20sp"/>
    </LinearLayout>
