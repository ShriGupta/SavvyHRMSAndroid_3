<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight=".4"
                    android:gravity="center"
                    android:text="Dt."
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:id="@+id/showDate"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="2.1"
                    android:gravity="center"
                    android:text="24/sep/2019"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="2.2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="From Time :*"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Button
                    android:id="@+id/fromTime_Button"
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_weight="1.8"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="center"
                    android:hint="Pick Time"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/text_size" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txtOD_FromDateTitle"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="To Time :*"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Button
                    android:id="@+id/toTime_Button"
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_weight="1.8"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="center"
                    android:hint="Pick Time"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>