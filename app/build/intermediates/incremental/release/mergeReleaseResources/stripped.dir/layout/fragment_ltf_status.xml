<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical"
                    android:text="From Date"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/btn_LTF_FromDate"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="center_vertical"
                    android:hint="Pick Date"
                    android:nextFocusDown="@+id/btn_to_oddate"
                    android:paddingLeft="20dp"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="To Date"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/btn_LTF_Todate"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="center_vertical"
                    android:hint="Pick Date"
                    android:nextFocusDown="@+id/btn_to_oddate"
                    android:paddingLeft="20dp"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear_LTFresultLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/resultLTFTextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_red"
                android:textSize="10dp"
                app:font="@string/font_name_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/customTextView"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Status"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/btn_LTFspinStatus"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5.5"
                android:background="@drawable/border_custom"
                android:drawableRight="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="Please Select"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/my_custom_color"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/btn_LTFSearch"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="@drawable/button_border_cancel"
                android:text="Search"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_custom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border_custom"
                android:orientation="vertical">


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/tvLTFDataNotFound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Data Not Found"
                    android:textColor="@color/color_red"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ltfRecyclerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>