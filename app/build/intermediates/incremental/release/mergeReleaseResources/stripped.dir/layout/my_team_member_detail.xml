<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/spin_border_new"
            android:layout_margin="20dip"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:weightSum="5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.9"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img_team_member_1"
                    android:background="@drawable/spin_border_new"
                    android:layout_width="80dip"
                    android:layout_height="80dip" />
            </LinearLayout>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_EmployeeName_1"
                android:text="Employee Name"
                android:gravity="center"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_weight="0.7"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_detail_1"
                android:text="Detail"
                android:gravity="center"
                android:layout_weight="0.7"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_marginDetail_1"
                android:text="Margin"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/spin_border_new"
            android:layout_margin="20dip"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:weightSum="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dip"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img_team_member_2"
                    android:background="@drawable/spin_border_new"
                    android:layout_width="80dip"
                    android:layout_height="80dip" />
            </LinearLayout>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_EmployeeName_2"
                android:text="Employee Name"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_detail_2"
                android:text="Detail"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_marginDetail_2"
                android:text="Margin"
                android:gravity="center"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

        </LinearLayout>
    </LinearLayout>

    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginBottom="5dip"
        android:background="@color/color_red"/>

</LinearLayout>
