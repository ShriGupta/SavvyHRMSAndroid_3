<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="100dp">

                <ImageView
                    android:background="@color/color_gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pankaj Vinay Ojha { ORA003 }"
                    android:background="@drawable/border_custom_new"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/action_btn_pressable"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:paddingLeft="5dp"
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:text="Action Date"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/my_custom_color"/>

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:textSize="12dp"
                        android:text="Action Date"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:paddingLeft="5dp"
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:textStyle="bold"
                        android:text="Action Level"
                        android:textSize="12dp"
                        android:textColor="@color/my_custom_color"/>

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:textSize="12dp"
                        android:text="Action Level"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:paddingLeft="5dp"
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:text="Comments"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/my_custom_color"/>

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:textSize="12dp"
                        android:text="Comments"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:paddingLeft="5dp"
                        android:layout_weight="5"
                        android:layout_width="0dip"
                        android:textStyle="bold"
                        android:layout_height="20dp"
                        android:text="Status"
                        android:textSize="12dp"
                        android:textColor="@color/my_custom_color"/>

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/customTextView3"
                        android:layout_width="0dip"
                        android:layout_height="20dp"
                        android:layout_weight="5"
                        android:text="Status"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/image1"
                       android:layout_marginRight="2dp"
                       android:layout_width="50dip"
                       android:layout_height="50dp"
                       android:layout_weight="5"
                       android:background="@color/color_gray"/>


                    <ImageView
                        android:id="@+id/image2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="50dip"
                        android:layout_height="50dp"
                        android:background="@color/color_gray"
                        android:layout_weight="5"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>