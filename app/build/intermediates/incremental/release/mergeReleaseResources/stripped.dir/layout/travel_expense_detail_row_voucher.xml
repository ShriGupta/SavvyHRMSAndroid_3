<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/con_header"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDtravel_mode"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:layout_width="110dip"
                    android:layout_height="20dp"
                    android:text="Travel Mode"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDtravel_class"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="100dip"
                    android:layout_height="20dp"
                    android:text="Travel Class"/>
                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDBoardingPlace"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="110dip"
                    android:layout_height="20dp"
                    android:text="Boarding Place"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDArrivalPlace"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="110dip"
                    android:layout_height="20dp"
                    android:text="Arrival Place"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDBoardingDate"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="110dip"
                    android:layout_height="20dp"
                    android:text="Boarding Date"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDArrivalDate"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:layout_width="110dip"
                    android:layout_height="20dp"
                    android:text="Arrival Date"/>


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDExpenseType"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:layout_width="100dip"
                    android:layout_height="20dp"
                    android:text="Expense Type"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDTicket"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:layout_width="60dip"
                    android:layout_height="20dp"
                    android:text="Ticket"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDHotel"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:layout_width="60dip"
                    android:textSize="@dimen/status_approval"
                    android:layout_height="20dp"
                    android:text="Hotel"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREDCab"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:gravity="center_vertical"
                    android:layout_width="60dip"
                    android:layout_height="20dp"
                    android:textSize="@dimen/status_approval"
                    android:text="Cab"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_ReasonTravel"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:gravity="center_vertical"
                    android:layout_width="120dip"
                    android:layout_height="20dp"
                    android:text="Reason"/>


            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
