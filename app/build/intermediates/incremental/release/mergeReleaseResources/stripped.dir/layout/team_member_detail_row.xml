<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dip"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="@dimen/_5sdp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorLightGray"
    app:rippleColor="@color/color_blue"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="95dip"
            android:layout_weight="3"

            android:gravity="center">
            <com.savvy.hrmsnewapp.customwidgets.CircularImageView
                android:id="@+id/img_team_member_1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:elevation="5dp"
                android:src="@drawable/profile_rounded"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_weight="4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_EmployeeName_1"
                android:text="Employee Name"
                android:gravity="center_vertical"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_detail_1"
                android:text="Detail"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_Department"
                android:text="Department"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_marginDetail_1"
                android:text="Designation"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="95dip"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txtDepth"
                android:text="3+"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/color_parat_green"
                android:textStyle="bold"
                android:layout_margin="5dip"
                android:textSize="24dip"
                app:font="@string/font_name_bold"
                android:layout_width="match_parent"
                android:layout_height="0dip" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
