<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_custom"
    android:padding="10dp"
    tools:context=".activity.AddCarPickUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Pick Up Date :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/carpickupDate"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="Pick Date"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Pick Up At :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edt_pickupAt"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="PickUp Location"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Drop Location :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edt_dropAt"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="Drop Location"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Pick Up Time:"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/carPickupTime"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:gravity="center"
                android:hint="Pick Time"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Release Time :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/carReleaseTime"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:hint="Pick Time"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|center"
                android:text="Comment :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edt_Comment"
                android:layout_width="0dip"
                android:layout_height="35sp"
                android:layout_weight="7"
                android:background="@drawable/border_custom"
                android:gravity="start|center"
                android:hint="Enter Comment"
                android:paddingLeft="10dp"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30sp"
            android:weightSum="10">

            <Button
                android:id="@+id/carpickupAddButton"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_weight="2.5"
                android:background="@drawable/button_border_cancel"
                android:text="Add"
                android:textColor="#ffff"
                android:textSize="@dimen/text_size" />


            <Button
                android:id="@+id/addcloseCarpickupButton"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10sp"
                android:layout_weight="4"
                android:background="@drawable/button_border_cancel"
                android:text="Add &amp; Close"
                android:textColor="#ffff"
                android:textSize="@dimen/text_size" />


            <Button
                android:id="@+id/close_addCarButton"
                android:layout_width="0dip"
                android:layout_height="30dp"
                android:layout_marginLeft="10sp"
                android:layout_weight="3"
                android:background="@drawable/button_border_cancel"
                android:text="Close"
                android:textColor="#ffff"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>