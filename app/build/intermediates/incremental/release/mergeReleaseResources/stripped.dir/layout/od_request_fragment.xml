<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txtOD_FromDateTitle"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="From Date *"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/btn_from_oddate"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:background="@drawable/border_custom"
                            android:gravity="center_vertical"
                            android:hint="From Date"
                            android:nextFocusDown="@+id/btn_to_oddate"
                            android:paddingLeft="20dp"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txtOD_ToDateTitle"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="To Date *"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/btn_to_oddate"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:background="@drawable/border_custom"
                            android:gravity="center_vertical"
                            android:hint="To Date"
                            android:paddingLeft="20dp"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_compareDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txt_compareDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:text="Result"
                            android:textColor="@color/color_red"
                            android:textSize="10dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:weightSum="10">


                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_weight="3"
                            android:weightSum="10">

                            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                android:layout_width="0dip"
                                android:layout_height="40dip"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="5"
                                android:gravity="center_vertical"
                                android:text="OD Status"
                                android:textColor="@color/my_custom_color"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_weight="3.5">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/fullDay_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_on"
                                    android:gravity="center_vertical"
                                    android:text="Full Day"

                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/fullDay_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_off"
                                    android:gravity="center_vertical"
                                    android:text="Full Day"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3.5">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/halfDay_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_on"
                                    android:gravity="center_vertical"
                                    android:text="Half Day"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="gone" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/halfDay_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_off"
                                    android:gravity="center_vertical"
                                    android:text="Half Day"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="visible" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_weight="3"
                            android:weightSum="10">

                            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="35dip"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="10"
                                android:gravity="center_vertical"
                                android:text="OD Sub Status"
                                android:textColor="@color/my_custom_color"
                                android:textSize="@dimen/text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_weight="3.5">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/first_half_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_on"
                                    android:enabled="false"
                                    android:gravity="center_vertical"
                                    android:text="First Half"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="gone" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/first_half_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_off"
                                    android:enabled="false"
                                    android:gravity="center_vertical"
                                    android:text="First Half"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="3.5">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/second_half_on"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_on"
                                    android:enabled="false"
                                    android:gravity="center_vertical"
                                    android:text="Second Half"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="gone" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:id="@+id/second_half_off"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dip"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_radio_off"
                                    android:enabled="false"
                                    android:gravity="center_vertical"
                                    android:text="Second Half"
                                    android:textColor="@color/my_custom_color"
                                    android:textSize="@dimen/text_size"
                                    android:visibility="visible" />
                            </RelativeLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="From Time"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/btn_od_time_from"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:background="@drawable/border_custom"
                            android:gravity="center_vertical"
                            android:hint="From Time"
                            android:paddingLeft="20dp"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="To Time"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:id="@+id/btn_od_to_time"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:background="@drawable/border_custom"
                            android:gravity="center_vertical"
                            android:hint="To Time"
                            android:paddingLeft="20dp"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_custom"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txtOD_TypeTitle"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="OD Type *"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <Spinner
                            android:id="@+id/spin_od_reason"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txtOD_ReasonTitle"
                            android:layout_width="0dip"
                            android:layout_height="35dip"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="Reason *"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                        <EditText
                            android:id="@+id/edt_od_reason"
                            android:layout_width="0dip"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="7"
                            android:background="@drawable/border_custom"
                            android:hint="Reason "
                            android:maxLines="1"
                            android:nextFocusDown="@+id/btn_od_request_submit"
                            android:singleLine="true"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_od_request_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_border_cancel"
                        android:gravity="center"
                        android:text="SUBMIT"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
