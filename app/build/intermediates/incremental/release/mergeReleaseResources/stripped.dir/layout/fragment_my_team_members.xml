<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.savvy.hrmsnewapp.fragment.MyTeamMembers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="0dp"
            android:layout_weight="2.2"
            android:background="#FFF"
            android:weightSum="6"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_BackButton"
                android:text="back"
                android:paddingLeft="0dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:textColor="@color/color_red"
                android:textStyle="bold"
                android:background="#fff"
                android:layout_weight="2"
                android:textSize="16dip"
                app:font="@string/font_name_bold"
                android:layout_width="0dip"
                android:layout_height="35dip" />

            <com.savvy.hrmsnewapp.customwidgets.CircularImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_myHeirarchyTitle"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:layout_weight="0.6"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:padding="20dp"
                android:background="@drawable/ic_profile_rounded"/>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:gravity="center_vertical"
                android:textColor="@color/color_red"
                android:textStyle="bold"
                android:layout_weight="2"
                android:background="#fff"
                android:paddingLeft="20dip"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_bold"
                android:layout_width="0dip"
                android:layout_height="35dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="0dip"
            android:layout_marginBottom="5dip"
            android:layout_weight="1.6"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_MyEmployeeNameTitle"
                    android:text="Employee Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingLeft="50dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_MyEmployeeName"
                    android:text="Employee Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingLeft="35dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:text="Employee Code"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="50dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_Mydetail"
                    android:text="Employee Code"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="35dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:text="Department"
                    android:paddingLeft="50dip"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_MymarginDetail"
                    android:text="Designation"
                    android:layout_weight="5"
                    android:paddingLeft="35dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:text="Supervisor"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="50dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_MySupervisor"
                    android:text="Supervisor"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingLeft="35dip"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_bold"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />
             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@drawable/border_custom"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_my_team_members"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
