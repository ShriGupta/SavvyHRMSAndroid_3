<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.savvy.hrmsnewapp.saleForce.AddNewCustomer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/linear_Type"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txtTitle_travelType"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="3"
                    android:paddingLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="Select Type *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Spinner
                    android:id="@+id/spin_saveLoc_Type"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="6"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_marginLeft="-2dp"
                    android:layout_weight="1"
                    android:background="@drawable/spin_border_new"
                    android:padding="10dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_customerDetail"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="Enter Name *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:id="@+id/edt_saveLoc_EmpName"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="3.5"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:hint="Enter Customer Name"
                    android:nextFocusDown="@+id/edt_custVisit_Description"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_LatLong"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="Lat &amp; Long *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/edt_saveLoc_LatLong"
                    android:layout_width="0dip"
                    android:layout_height="45dip"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:hint="Get Current Location"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light"
                    android:background="@drawable/spin_border_new"/>

                <!--<EditText-->
                <!--android:id="@+id/edt_saveLoc_LatLong"-->
                <!--android:layout_width="0dip"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="3.5"-->
                <!--android:background="@drawable/spin_border_new"-->
                <!--android:gravity="center_vertical"-->
                <!--android:cursorVisible="false"-->
                <!--android:lines="6"-->
                <!--android:maxLines="10"-->
                <!--android:paddingTop="5dip"-->
                <!--android:scrollbars="vertical"-->
                <!--android:hint="Lat: &amp; Long:"-->
                <!--android:paddingLeft="10dip"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="@color/my_custom_color"-->
                <!--android:textColorHint="@color/color_gray"-->
                <!--android:textSize="@dimen/text_size"-->
                <!--android:textStyle="normal"-->
                <!--app:font="@string/font_name_light" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_locIdentifier"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="Location Identifier"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:id="@+id/edt_saveLoc_LocIdentifier"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="3.5"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:hint="Location Identifier"
                    android:nextFocusDown="@+id/edt_custVisit_Description"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_territory"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Select Territory *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Spinner
                    android:id="@+id/spin_saveLoc_Territory"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="6"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_marginLeft="-2dp"
                    android:layout_weight="1"
                    android:background="@drawable/spin_border_new"
                    android:padding="10dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_industry"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">
                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Select Industry *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Spinner
                    android:id="@+id/spin_saveLoc_Industry"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="6"
                    android:background="@drawable/spin_border_new"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_marginLeft="-2dp"
                    android:layout_weight="1"
                    android:background="@drawable/spin_border_new"
                    android:padding="10dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_SaveLoc_Save"
                    android:layout_width="100dip"
                    android:layout_height="35dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_SaveLoc_Cancel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

