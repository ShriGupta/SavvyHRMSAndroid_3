<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/border_custom"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="Leave Date :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/leaveDate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/deductionSpinner"
                android:layout_width="0dip"
                android:layout_height="25sp"
                android:layout_weight="3.5"
                android:background="@drawable/border_custom"
                android:drawableRight="@drawable/arrow_down"
                android:font="@string/font_name_light"
                android:gravity="center"
                android:onClick="showDropDownMenu"
                android:textColor="@color/my_custom_color"
                android:textColorHint="@color/color_gray"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="start"
                android:text="Status :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/leaveStatus"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/my_custom_color"
                android:layout_weight="2.5"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end"
                android:text="# of Deduction : "
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/deductionValue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_red"
            android:src="@drawable/line" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>