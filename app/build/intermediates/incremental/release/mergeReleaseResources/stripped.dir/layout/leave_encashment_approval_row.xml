<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="9">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Token No."
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="E-Code"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Emp Name"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_tokenNumber"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_empcode"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_empName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:orientation="horizontal"
            android:weightSum="9">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Leave Type"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Req Encash Days"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="App Encash Days"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_leaveType"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_requestEncashDays"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_appEncashDays"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Label"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:gravity="center"
                android:text="Reason:"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_Reason"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="top"
                android:paddingStart="50sp"
                android:paddingLeft="33sp"
                android:paddingRight="10sp"
                android:text="Label"
                app:font="@string/font_name_light" />

            <Button
                android:id="@+id/btn_Action"
                android:layout_width="0dip"
                android:layout_height="30sp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:text="Action"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="@color/color_red"
                android:src="@drawable/line" />

        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>