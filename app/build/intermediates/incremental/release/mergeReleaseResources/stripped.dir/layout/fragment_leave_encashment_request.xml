<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.savvy.hrmsnewapp.fragment.OTRequestFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_calendarList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/border_custom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_custom"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_leaveTypeYear"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Leave Type *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/spin_LE_reason"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:font="@string/font_name_light"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/my_custom_color"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_leaveEncashDays"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="1dp"
                    android:text="Leave Encashment *\nDays "
                    android:textColor="@color/my_custom_color"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edt_LE_days"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="center_vertical"
                    android:hint="Leave Encashment Days"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_Remarks"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Remarks *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edt_LE_remarks"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@drawable/border_custom"
                    android:font="@string/font_name_light"
                    android:gravity="left"
                    android:hint="Remarks"
                    android:paddingLeft="10dp"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="@color/color_gray"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_LE_submit"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:text="Send Request"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/btn_LE_Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Reset"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>
