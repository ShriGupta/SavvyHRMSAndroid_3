<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.savvy.hrmsnewapp.fragment.ReimbursementRequestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_fromDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txv_YearTitle"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="@string/month"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_month"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txv_financ_year_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Year"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_year"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2017"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Reimbursement Type *"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/sp_reim_spinner"
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="4"
                android:background="@drawable/spin_border_new"
                android:font="@string/font_name_light"
                android:gravity="center_vertical"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:background="@drawable/spin_border_new"
                android:padding="10dp"
                android:src="@drawable/arrow_down" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Monthly Balance"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_monthly_balance"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Yearly Balance"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_yearly_balance"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="@string/document_required"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_documents_required"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Non-Taxable Amount *"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_non_taxable_amount"
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="5"
                android:background="@drawable/border_custom_new"
                android:cursorVisible="true"
                android:font="@string/font_name_light"
                android:gravity="center_vertical"
                android:hint="@string/non_taxable_amount"
                android:inputType="numberDecimal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/my_custom_color"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Taxable Amount *"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edt_taxable_amount"
                android:layout_width="0dip"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="5"
                android:background="@drawable/border_custom_new"
                android:cursorVisible="true"
                android:font="@string/font_name_light"
                android:gravity="center_vertical"
                android:hint="Taxable Amount"
                android:inputType="numberDecimal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/my_custom_color"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <include layout="@layout/upload_file_layout" />


        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Remarks"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:font="@string/font_name_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/border_custom_new"
                android:cursorVisible="true"
                android:font="@string/font_name_light"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/my_custom_color"
                android:textColorHint="@color/color_gray"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_border_cancel"
                android:gravity="center"
                android:text="Send"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/button_border_cancel"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
