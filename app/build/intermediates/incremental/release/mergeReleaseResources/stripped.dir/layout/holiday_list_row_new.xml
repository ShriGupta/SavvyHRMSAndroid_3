<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearHolidayBack"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_white"
        android:orientation="horizontal"
        android:weightSum="9">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/holidayDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:text="Holiday Date"
            android:gravity="start|center"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/holiday_dayName"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="Day Name"
            android:gravity="start|center"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/holidaytitle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="start|center"
            android:text="Holiday Name"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/holiday_no_data_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border_custom_new"
        android:gravity="center"
        android:text="No Data Found"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>
