<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/nav_layout"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_height="60dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:weightSum="2"
                android:id="@+id/hear_layout">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Leave Status"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:id="@+id/btn_leaveStatus"
                    android:background="@drawable/white_btn_selector"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/text"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Leave Balance"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:background="@drawable/white_btn_selector"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_leaveBalance"
                    android:layout_below="@+id/text"
                    />
                <!-- <Button
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:text="Attendance"
                     android:layout_weight="1"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:background="@drawable/white_btn_selector"
                     android:id="@+id/btn_parent"
                     android:layout_marginLeft="5dp"
                     android:layout_below="@+id/text"
                     />-->

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_below="@+id/nav_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<fragment
                android:id="@+id/info_fragment"
                android:name="com.cross.fragment.GroupInfomationFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.cross.fragment.GroupInfomationFragment"
                />-->
        </FrameLayout>



    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>