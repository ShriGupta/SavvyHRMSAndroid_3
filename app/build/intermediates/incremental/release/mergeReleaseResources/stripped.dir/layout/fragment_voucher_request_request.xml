<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.savvy.hrmsnewapp.fragment.PunchApprovalFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_voucher_back"
                android:textStyle="bold"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:background="@drawable/button_border"
                android:layout_width="180dip"
                android:layout_height="40dp"
                android:text="Conveyance Request"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_custom"
            android:layout_marginTop="20dp"
            android:layout_margin="0dp">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txtDataNotFound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Data Not Found"
                android:textColor="@color/color_red"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:background="#fff"
                android:id="@+id/conveyanceRecyclerVoucher"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>
