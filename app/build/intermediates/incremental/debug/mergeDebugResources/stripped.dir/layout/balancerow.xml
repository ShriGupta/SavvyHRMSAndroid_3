<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Leaev Name"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->

                    <TextView
                        android:id="@+id/txv_leaveNameValue"
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Leave Value"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:text="Approved"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->

                    <TextView
                        android:id="@+id/txt_approvedValue"
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Approved"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Balance"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->

                    <TextView
                        android:id="@+id/txt_balanceValue"
                        android:layout_width="0dip"
                        android:layout_height="25dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:text="Balance"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/status_approval"/>
                        <!--app:font="@string/font_name_light" />-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="8">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="Pending"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/status_approval"/>
                            <!--app:font="@string/font_name_light" />-->

                        <TextView
                            android:id="@+id/txt_pendingValue"
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="Pending"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/status_approval"/>
                            <!--app:font="@string/font_name_light" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="5"
                            android:text="Running"
                            android:gravity="center_vertical"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/status_approval"/>
                            <!--app:font="@string/font_name_light" />-->

                        <TextView
                            android:id="@+id/txt_runningValue"
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="Running"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/status_approval"/>
                            <!--app:font="@string/font_name_light" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/txt_clear_title"
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/status_approval"/>
                            app:font="@string/font_name_light" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dip"
                            android:layout_weight="5">
                            <TextView
                                android:id="@+id/txt_applyLeaveValuegreen"
                                android:layout_width="wrap_content"
                                android:layout_height="25dip"
                                android:gravity="center"
                                android:text="Apply Leave"
                                android:layout_marginRight="0dp"
                                android:textColor="#fff"
                                android:background="@drawable/apply_green_border"
                                android:textSize="10sp"
                                android:layout_marginLeft="45dp"/>
                            <TextView
                                android:id="@+id/txt_applyLeaveValue"
                                android:layout_width="wrap_content"
                                android:layout_height="25dip"
                                android:text="Apply Leave"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:visibility="gone"
                                android:textColor="#fff"
                                android:background="@drawable/apply_orange_border"
                                android:layout_marginLeft="45dp"/>
                            <TextView
                                android:id="@+id/txt_insufficiant"
                                android:layout_width="wrap_content"
                                android:layout_height="25dip"
                                android:text="Insufficient Balance"
                                android:visibility="gone"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:textColor="#fff"
                                android:layout_marginLeft="32sp"
                                android:background="@drawable/insufficiant_border"/>
                        </RelativeLayout>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <ImageView

            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="0.1dp"
            android:background="@color/color_red"
            />
    </LinearLayout>


</RelativeLayout>
