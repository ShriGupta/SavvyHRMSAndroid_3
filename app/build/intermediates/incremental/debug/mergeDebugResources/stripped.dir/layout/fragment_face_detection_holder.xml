<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <!-- <include
                 android:id="@+id/toolbar"
                 layout="@layout/toolbar"
                 />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tolbar"
            android:background="#ffffff"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_calendarList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Current Date"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/tv_face_currentDate"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="Current Date"
                        android:paddingLeft="20dip"
                        android:textAllCaps="false"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Current Time"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/tv_face_currentTime"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="Current Time"
                        android:paddingLeft="20dip"
                        android:textAllCaps="false"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Remark"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <EditText
                        android:id="@+id/tv_face_remark"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:textAllCaps="false"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_face_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_border_cancel"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mark_attendance"
                    android:textColor="#ffffff" />


            </LinearLayout>


            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_face_locationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/getting_your_location"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>