<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_custom"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/lr_balance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/lr_status"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/lr_deduction_type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/lr_deduction_days"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
</LinearLayout>