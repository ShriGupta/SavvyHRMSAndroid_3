<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:text="Question"
        android:textColor="@color/my_custom_color_1"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioFirstAnswer"
        android:layout_width="match_parent"
        android:checked="false"
        android:saveEnabled="true"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/radioSecondAnswer"
        android:layout_width="match_parent"
        android:checked="false"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/radioThirdAnswer"
        android:layout_width="match_parent"
        android:checked="false"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/radioFourthAnswer"
        android:layout_width="match_parent"
        android:checked="false"
        android:layout_height="wrap_content" />
    <!--
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
</LinearLayout>