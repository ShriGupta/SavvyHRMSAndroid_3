<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawerList">

        <RelativeLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.savvy.hrmsnewapp.customwidgets.CircularImageView
                android:id="@+id/user_profile_photo_Round"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_profile_image1"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Hariom Mishra"
            android:textColor="#fff"
            android:textSize="15dp"
            app:font="@string/font_name_light" />
    </RelativeLayout>

</RelativeLayout>