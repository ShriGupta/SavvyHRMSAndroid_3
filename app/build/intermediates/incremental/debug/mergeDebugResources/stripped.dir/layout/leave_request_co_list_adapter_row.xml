<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <CheckBox
            android:id="@+id/coCheckBox"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:background="@drawable/border_custom"
            android:focusable="false" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/coDate"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_custom"
            android:gravity="center"
            android:text="CO Date"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/co_Days"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:background="@drawable/border_custom"
            android:gravity="center"
            android:text="Days"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/co_daysName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border_custom"
            android:gravity="center"
            android:text="Days Name"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
</LinearLayout>