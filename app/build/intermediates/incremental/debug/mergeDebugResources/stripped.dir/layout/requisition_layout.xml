    <LinearLayout
        android:id="@+id/ll_requisition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/requisition_Req_linear2"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:weightSum="3"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_weight="5"
            >
            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_requsition_request"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.8"
                android:background="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/my_custom_color"
                android:text="Requisition Request"/>

            <ImageView
                android:id="@+id/requisition_req_line_status1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.2"
                android:visibility="visible"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/requisition_status_linear1"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="5"
            android:weightSum="3"
            android:background="#fff"
            android:orientation="vertical"
            >
            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/tv_requsition_status"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.8"
                android:background="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/my_custom_color"
                android:text="Requisition Status"/>

            <ImageView
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"
                android:id="@+id/requisition_status_line_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.2"
                android:visibility="visible"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>



    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_requisition" />

</RelativeLayout>