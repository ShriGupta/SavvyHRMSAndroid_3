<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.savvy.hrmsnewapp.fragment.OTRequestFragment"
    android:background="#fff">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_calendarList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtCompOff_compoffDateTitle"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="4"
                        app:font="@string/font_name_light"
                        android:gravity="center_vertical"
                        android:text="Comp Off Date *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/btn_cortime_date"
                        android:layout_width="0dip"
                        app:font="@string/font_name_light"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="Comp Off Date"
                        android:paddingLeft="20dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_resultData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:layout_gravity="bottom">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/textResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:font="@string/font_name_light"
                        android:gravity="left"
                        android:layout_weight="10"
                        android:text="text"
                        android:textColor="@color/color_red"
                        android:textSize="11dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtCompOff_fromTimeTitle"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="From Time *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        app:font="@string/font_name_light" />

                    <Button
                        android:id="@+id/btn_cortime_from_date"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dp"
                        app:font="@string/font_name_light"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="Pick Date"
                        android:paddingLeft="20dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/btn_cortime_from"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="From Time"
                        app:font="@string/font_name_light"
                        android:paddingLeft="20dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtCompOff_toTimeTitle"
                        android:layout_width="0dip"
                        app:font="@string/font_name_light"
                        android:layout_height="35dip"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="To Time *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/btn_cortime_to_date"
                        android:layout_width="0dip"
                        app:font="@string/font_name_light"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="Pick Date"
                        android:paddingLeft="20dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/btn_cortime_to"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="1dp"
                        app:font="@string/font_name_light"
                        android:layout_weight="5"
                        android:background="@drawable/border_custom"
                        android:gravity="center_vertical"
                        android:hint="To Time"
                        android:paddingLeft="20dp"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="bottom">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/textResult1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        app:font="@string/font_name_light"
                        android:gravity="left"
                        android:layout_weight="10"
                        android:text="text"
                        android:textColor="@color/color_red"
                        android:visibility="gone"
                        android:textSize="11dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtCompOff_ReasonTitle"
                        android:layout_width="0dip"
                        app:font="@string/font_name_light"
                        android:layout_height="30dip"
                        android:layout_weight="4"
                        android:layout_marginLeft="35dp"
                        android:text="Reason"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <Spinner
                        android:id="@+id/spin_cor_reason"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_weight="4.3"
                        android:layout_marginLeft="-3dp"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="center_vertical"
                        app:font="@string/font_name_light"
                        android:background="@drawable/spin_border_new"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                    <ImageView
                        android:layout_weight="0.7"
                        android:padding="5dp"
                        android:layout_width="0dip"
                        android:background="@drawable/spin_border_new"
                        android:layout_marginLeft="-2dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow_down"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtCompOff_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:font="@string/font_name_light"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:textColor="@color/my_custom_color"
                        android:gravity="center_vertical"
                        android:text="Remarks"/>
                    <EditText
                        android:id="@+id/compOff_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint="Remarks"
                        android:paddingLeft="10dip"
                        android:textColorHint="@color/color_gray"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        app:font="@string/font_name_light"
                        android:textSize="@dimen/text_size"
                        android:singleLine="false"
                        android:lines="3"
                        android:background="@drawable/border_custom_new"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_cor_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_border_cancel"
                    android:padding="0dp"
                    android:text="Submit"
                    android:textColor="#ffffff" />

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>
