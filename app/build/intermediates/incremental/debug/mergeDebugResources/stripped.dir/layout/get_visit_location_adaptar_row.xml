<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="4"
            android:background="@drawable/border_custom_new"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_weight="3.5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_getCurLocEmpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:text="Name"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_bold" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_getCurLocEmpLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Location"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_getCurLocTime"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Time"
                android:textColor="@color/my_custom_color"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                app:font="@string/font_name_light"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dip"
                android:drawableRight="@drawable/right_arrow"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
