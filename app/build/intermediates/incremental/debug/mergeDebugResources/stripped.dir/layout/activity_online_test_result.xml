<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentScrollView"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Test Result"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="Total Questions"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txtTotalQuestion"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/border_custom"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="10"
                android:textAllCaps="false"
                android:textColor="@color/color_parat_green"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="Attempted"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txtAnswered"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/border_custom"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="10"
                android:textAllCaps="false"
                android:textColor="@color/color_parat_green"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txtTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="Scored 2 out of 10"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            app:font="@string/font_name_light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="Result"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txv_result"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/border_custom"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="FAIL"
                android:textAllCaps="true"
                android:textColor="@color/insufficiant_color"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="Message"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txv_message"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:background="@drawable/border_custom"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="You're not eligible to mark your attendence!!"
                android:textAllCaps="false"
                android:textColor="@color/color_parat_green"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:font="@string/font_name_light" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_border_cancel"
            android:padding="0dp"
            android:text="Close"
            android:textColor="#ffffff" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txtSampleTextQuestions"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="Following are the correct answers of the questions, which you answered wrong. Please read it and re-appear in the exam."
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            app:font="@string/font_name_light" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_question_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>