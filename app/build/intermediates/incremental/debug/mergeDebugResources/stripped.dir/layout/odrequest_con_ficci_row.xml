<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_custom"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/odcCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="10">


                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="start|center"
                            android:text="Date"
                            android:paddingLeft="5dp"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                            android:id="@+id/odc_showDate"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:gravity="start|center"
                            android:paddingLeft="10dp"
                            android:text="24/sep/2019"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="start|center"
                            android:text="From Time :*"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/odcfromTime_Button"
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_weight="2.5"
                            android:background="@drawable/border_custom"
                            android:font="@string/font_name_light"
                            android:gravity="center"
                            android:hint="Pick Time"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="To Time :*"
                            android:textColor="@color/my_custom_color"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/odctoTime_Button"
                            android:layout_width="0dip"
                            android:layout_height="25dip"
                            android:layout_weight="2.5"
                            android:background="@drawable/border_custom"
                            android:font="@string/font_name_light"
                            android:gravity="center"
                            android:hint="Pick Time"
                            android:textColor="@color/my_custom_color"
                            android:textColorHint="@color/colorGray"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_red"
                    android:src="@drawable/line" />

            </LinearLayout>
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>