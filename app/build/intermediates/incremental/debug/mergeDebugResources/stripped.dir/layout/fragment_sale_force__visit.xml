<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.savvy.hrmsnewapp.saleForce.SaleForce_Visit">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="503dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="Enter Name *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <!--<AutoCompleteTextView-->
                        <!--android:id="@+id/av_custVisit_Name"-->
                        <!--android:layout_width="0dip"-->
                        <!--android:layout_height="35dip"-->
                        <!--android:layout_weight="3.5"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:hint="Enter Customer Name"-->
                        <!--android:nextFocusDown="@+id/edt_custVisit_Description"-->
                        <!--android:paddingLeft="10dip"-->
                        <!--android:singleLine="true"-->
                        <!--android:textColor="@color/my_custom_color"-->
                        <!--android:textColorHint="@color/color_gray"-->
                        <!--android:textSize="@dimen/text_size"-->
                        <!--android:textStyle="normal"-->
                        <!--app:font="@string/font_name_light"-->
                        <!--android:background="@drawable/spin_border_new"/>-->

                    <EditText
                        android:id="@+id/edt_custVisit_Name"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_weight="3.5"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center_vertical"
                        android:hint="Enter Customer Name"
                        android:nextFocusDown="@+id/edt_custVisit_Description"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txtTitle_travelType"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="3.05"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Select Purpose *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <Spinner
                        android:id="@+id/spin_custVisit_Purpose"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_weight="6"
                        android:paddingLeft="10dip"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        app:font="@string/font_name_light" />

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="35dp"
                        android:layout_marginLeft="-2dp"
                        android:layout_weight="1"
                        android:background="@drawable/spin_border_new"
                        android:padding="10dp"
                        android:src="@drawable/arrow_down" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="2.1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="Start Date *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <Button
                        android:id="@+id/btn_custVisit_startDate"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="2.9"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center"
                        android:hint="Pick Date"
                        android:paddingLeft="10dip"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />

                    <Button
                        android:id="@+id/btn_custVisit_StartTime"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="2"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center"
                        android:hint="Pick Time"
                        android:paddingLeft="10dip"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="2.1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="Ends Date *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />

                    <Button
                        android:id="@+id/btn_custVisit_EndDate"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="2.9"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center"
                        android:hint="Pick Date"
                        android:paddingLeft="10dip"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        android:visibility="invisible"
                        app:font="@string/font_name_light" />

                    <Button
                        android:id="@+id/btn_custVisit_EndTime"
                        android:layout_width="0dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="10dip"
                        android:layout_weight="2"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center"
                        android:hint="Pick Time"
                        android:paddingLeft="10dip"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1.4"
                    android:gravity="center_vertical">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/edt_custVisit_selectedPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/spin_border_new"
                        android:gravity="center_vertical"
                        android:hint="Selected Purpose (Subject)"
                        android:paddingLeft="15dip"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3.6"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="Description *"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light" />

                    <EditText
                        android:id="@+id/edt_custVisit_Description"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="3.3"
                        android:background="@drawable/spin_border_new"
                        android:cursorVisible="false"
                        android:gravity="top|left"
                        android:hint="Description"
                        android:lines="6"
                        android:maxLines="10"
                        android:paddingLeft="10dip"
                        android:paddingTop="5dip"
                        android:scrollbars="vertical"
                        android:textColor="@color/my_custom_color"
                        android:textColorHint="@color/color_gray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="normal"
                        app:font="@string/font_name_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_custVisit_Save"
                        android:layout_width="100dip"
                        android:layout_height="35dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="5"
                        android:background="@drawable/button_border_cancel"
                        android:gravity="center"
                        android:text="Save"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_custVisit_Cancel"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="5"
                        android:background="@drawable/button_border_cancel"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!--</ScrollView>-->
</ScrollView>
