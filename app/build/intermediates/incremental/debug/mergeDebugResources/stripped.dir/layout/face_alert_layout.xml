<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layout_round_border">

    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
        android:id="@+id/tv_faceMessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#B03060"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/face_alertButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="OK"
        android:background="@drawable/button_border_cancel"
        android:textColor="@color/white" />

</LinearLayout>