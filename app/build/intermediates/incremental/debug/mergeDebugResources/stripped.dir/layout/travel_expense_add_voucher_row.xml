<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="2"
                android:id="@+id/con_header"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREexpenseType"
                    android:background="@drawable/border_custom_new"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:layout_width="100dip"
                    android:layout_height="20dp"
                    android:text="Expense Type"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREBillNo"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="90dip"
                    android:layout_height="20dp"
                    android:text="Bill no"/>
                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREBillDate"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="100dip"
                    android:layout_height="20dp"
                    android:text="Bill Date"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREBillAmount"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="80dip"
                    android:layout_height="20dp"
                    android:text="Bill Amount"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TREComProvided"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/status_approval"
                    android:background="@drawable/border_custom_new"
                    android:layout_width="120dip"
                    android:layout_height="20dp"
                    android:text="Com. Provided"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TRE_Reason"
                    android:background="@drawable/border_custom_new"
                    android:layout_weight="2"
                    android:textSize="@dimen/status_approval"
                    android:paddingLeft="3dp"
                    android:layout_width="140dip"
                    android:layout_height="20dp"
                    android:text="Reason"/>


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TRE_Edit"
                    android:background="@drawable/button_border"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:layout_width="80dip"
                    android:layout_height="20dp"
                    android:text="Edit"
                    android:visibility="gone"
                    android:textSize="@dimen/status_approval"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"/>

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/TRE_Remove"
                    android:background="@drawable/button_border"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="@dimen/status_approval"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="80dip"
                    android:layout_height="20dp"
                    android:text="Remove"/>
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
