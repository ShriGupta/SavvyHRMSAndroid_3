<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp"
    tools:context="com.savvy.hrmsnewapp.fragment.ConveyanceRequestFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Voucher_conveyance"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_border"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Voucher Detail"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_add_con"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_border"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="ADD Conveyance"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
                <!--<Button-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/btn_Voucher_conveyance"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="12dp"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingRight="5dp"-->
                <!--android:background="@drawable/button_border"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:text="Voucher"/>-->
                <!---->
                <!--<Button-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/btn_add_con"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="12dp"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:paddingRight="5dp"-->
                <!--android:background="@drawable/button_border"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:text="ADD Conveyance"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_conveyanceRequestDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Conveyance Details *"
                    android:textColor="@color/my_custom_color"
                    android:textColorHint="#a0a"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_custom_new">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/con_header"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Type"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="From"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="To"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Date"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Distance"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Amount"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Reason"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Display Name"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Actual Name"
                                    android:textStyle="bold" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Action"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                                    android:layout_width="120dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/border_custom_new"
                                    android:paddingLeft="3dp"
                                    android:text="Remove"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_add_conveyance"
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="8">

                            </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                    </HorizontalScrollView>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="Remarks *"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:id="@+id/conveyance_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:background="@drawable/border_custom_new"
                    android:hint="Remarks"
                    android:lines="3"
                    android:singleLine="false"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="100dip"
                    android:layout_height="35dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:text="submit"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_border_cancel"
                    android:gravity="center"
                    android:text="Reset"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
