<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="4"
                        android:text="Leave Name :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txv_leaveName"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="6"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="4"
                        android:text="Advance :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_advance"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="6"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="4"
                        android:text="Balance"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_balance"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="6"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="4"
                        android:text="Running"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_running"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="6"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingRight="5sp"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="7"
                        android:gravity="center|top"
                        android:paddingRight="20sp"
                        android:text="Approved"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_approved"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="3"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"

                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="7"
                        android:gravity="center|top"
                        android:paddingRight="20sp"
                        android:text="Lop :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_lop"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"

                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="7"
                        android:gravity="center|top"
                        android:text="Pending :"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/txt_pending"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="3"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:id="@+id/tv_clear_title"
                        android:layout_width="0dip"
                        android:layout_height="26dip"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_size"
                        app:font="@string/font_name_light" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="26dip"
                        android:layout_weight="5"
                        android:gravity="end">

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txt_applyLeaveGreen"
                            android:layout_width="wrap_content"
                            android:layout_height="26dip"
                            android:layout_marginLeft="30sp"
                            android:background="@drawable/apply_green_border"
                            android:text="Apply Leave"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size"
                            android:visibility="visible" />

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txt_applyLeaveOrange"
                            android:layout_width="wrap_content"
                            android:layout_height="26dip"
                            android:layout_marginLeft="30sp"
                            android:background="@drawable/apply_orange_border"
                            android:text="Apply Leave"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size"
                            android:visibility="visible" />

                        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                            android:id="@+id/txt_insufficiantRed"
                            android:layout_width="wrap_content"
                            android:layout_height="26dip"
                            android:background="@drawable/insufficiant_border"
                            android:gravity="center"
                            android:text="Insufficient Balance"
                            android:textColor="#fff"
                            android:textSize="@dimen/text_size"
                            android:visibility="visible" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_red" />
    </LinearLayout>


</RelativeLayout>
