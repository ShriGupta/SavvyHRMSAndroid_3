<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_custom_new"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/dialogNotes_header"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:text="Notes"
            android:gravity="bottom"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="0.5dp"
        android:background="@color/color_red" />



    <LinearLayout
        android:id="@+id/linearCommentRow"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edt_comment_dialogNotes"
            android:layout_width="0dip"
            android:layout_height="70dip"
            android:layout_marginTop="0dp"
            android:layout_weight="7"
            android:background="@drawable/border_custom_new"
            android:gravity="left"
            android:hint="Enter Notes Here....."
            android:lines="5"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/my_custom_color"
            android:textColorHint="@color/color_gray"
            android:textSize="12dp"
            app:font="@string/font_name_light" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="1dp"
        android:background="@color/color_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:padding="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_weight="1"
            android:nextFocusRight="@+id/btn_close"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_border_cancel"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="GO" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:padding="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_border_cancel"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Clear" />

    </LinearLayout>

</LinearLayout>
