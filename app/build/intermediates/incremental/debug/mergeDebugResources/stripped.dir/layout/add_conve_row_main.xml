<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/con_header"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_type"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Type" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_placeFrom"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="From" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_placeTo"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="To" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_Date"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Date" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_Distance"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Distance" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_amount"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Amount" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/con_reason"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Reason" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/dName"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Display Name" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/actualName"
                    android:layout_width="120dip"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/spin_border_new"
                    android:paddingLeft="5dp"
                    android:text="Actual Name" />

