<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    tools:context="com.savvy.hrmsnewapp.visitorManagement.VisitorMainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Visitor Management"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dip"
            app:font="@string/font_name_bold"/>

        <Button
            android:id="@+id/btn_scheduled"
            android:layout_width="match_parent"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_height="50dip"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:textColor="#fff"
            android:background="@drawable/button_border"
            app:font="@string/font_name_bold"
            android:text="Scheduled Visitor"/>

        <Button
            android:id="@+id/btn_nonScheduled"
            android:layout_width="match_parent"
            android:layout_marginTop="20dip"
            android:layout_height="50dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:textColor="#fff"
            android:background="@drawable/button_border"
            app:font="@string/font_name_bold"
            android:text="Non-Scheduled Visitor"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
