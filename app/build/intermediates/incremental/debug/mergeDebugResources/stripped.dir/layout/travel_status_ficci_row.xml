<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Travel Request No :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_travelNumber"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Status :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_Status"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Label"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="start Date :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_statusStartDate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="End Date :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_statusEndDate"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Action By :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_actionBy"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Travel Type:"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_travelType"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Reason :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txt_StatusReason"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="Project Name :"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_projectName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:textColor="@color/my_custom_color"
            android:textSize="@dimen/text_size" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">


        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_statusAddTrip"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/color_blue"
            android:gravity="center"
            android:text="Add Trip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:visibility="visible" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_statusAddViewReport"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/color_blue"
            android:gravity="center"
            android:text="View Report"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:visibility="gone" />


        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_statusPullBack"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/color_blue"
            android:gravity="center"
            android:text="Pull Back"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:visibility="gone" />

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/txt_statusCancel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/color_red"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:background="@color/color_red"
        android:src="@drawable/line" />


</LinearLayout>