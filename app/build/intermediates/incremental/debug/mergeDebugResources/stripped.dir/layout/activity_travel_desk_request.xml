<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activity.TravelDeskRequest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/travelDeskAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/border_custom"
                android:hint="Enter amount"
                android:paddingLeft="5sp"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Upload File :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:id="@+id/chooseFileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:background="@color/colorLightGray">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/fileimage" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="Choose  File"
                    android:textSize="@dimen/text_size" />


            </LinearLayout>

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:id="@+id/txtNoFileChosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="No file chosen"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/imguploadIcon"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/imageuploadicon"
                android:visibility="gone"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks :"
                android:textColor="@color/my_custom_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/travelDeskremarks"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/border_custom"
                android:hint=" Enter remarks"
                android:paddingLeft="5sp"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/travelDeskSendVButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/button_border_cancel"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/travelDeskCloseButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15sp"
                android:background="@drawable/button_border_cancel"
                android:text="Close"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>