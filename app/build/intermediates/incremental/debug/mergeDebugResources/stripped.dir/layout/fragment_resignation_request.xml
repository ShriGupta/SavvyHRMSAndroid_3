<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.savvy.hrmsnewapp.fragment.ConveyanceRequestFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:paddingLeft="10dp"
                    android:layout_weight="4"
                    android:text="Effective Date *"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Button
                    android:id="@+id/pickFromDate"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="5"
                    android:hint="Pick Date"
                    android:background="@drawable/border_custom_new"
                    android:gravity="center"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:paddingLeft="10dp"
                    android:layout_weight="4"
                    android:text="Proposed Date *"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <Button
                    android:id="@+id/pickToDate"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="5"
                    android:hint="Pick Date"
                    android:background="@drawable/border_custom_new"
                    android:gravity="center"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="7.5"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:layout_weight="5"
                        android:textColor="@color/my_custom_color"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        app:font="@string/font_name_light"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dip"
                        android:text="Resignation Details *"/>

                    <Button
                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:id="@+id/btn_add1_resignation"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="#fff"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/button_border"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:text="ADD Reason"/>

                </LinearLayout>



                <FrameLayout
                    android:background="@drawable/border_custom_new"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/my_custom_color"
                    app:font="@string/font_name_light"
                    android:gravity="bottom"
                    android:text="Address *"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Address"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_gray"
                    android:layout_gravity="top|left"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:textSize="@dimen/text_size"
                    android:singleLine="false"
                    android:lines="4"
                    android:background="@drawable/border_custom_new"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="4"
                    android:text="Email Id *"
                    android:textColor="@color/my_custom_color"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:background="@drawable/border_custom_new"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="6"
                    android:paddingLeft="10dp"
                    android:hint="Email Id"
                    android:textColorHint="@color/colorGray"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:cursorVisible="true"
                    app:font="@string/font_name_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="4"
                    android:text="Mobile No. *"
                    android:textColor="@color/my_custom_color"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:background="@drawable/border_custom_new"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="6"
                    android:paddingLeft="10dp"
                    android:hint="Mobile No."
                    android:textColorHint="@color/colorGray"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:cursorVisible="true"
                    app:font="@string/font_name_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="4"
                    android:text="Phone No."
                    android:textColor="@color/my_custom_color"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <EditText
                    android:background="@drawable/border_custom_new"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="6"
                    android:paddingLeft="10dp"
                    android:hint="Phone No."
                    android:textColorHint="@color/colorGray"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:cursorVisible="true"
                    app:font="@string/font_name_light" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="@drawable/button_border_cancel"
                    android:text="submit"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="100dip"
                    android:layout_height="35dp" />
                <Button
                    android:id="@+id/btn_close_travel"
                    android:layout_marginLeft="3dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:background="@drawable/button_border_cancel"
                    android:text="Reset"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_width="100dp"
                    android:layout_height="35dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
