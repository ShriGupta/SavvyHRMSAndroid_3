<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.savvy.hrmsnewapp.activity.FaceAttendanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <com.savvy.hrmsnewapp.customwidgets.CustomTextView
            android:id="@+id/tv_eyeBlinkText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/layout_round_border"
            android:gravity="center"
            android:text="@string/please_blink_your_eyes"
            android:textAllCaps="false"
            android:textColor="@color/color_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/backButton"
            android:layout_below="@+id/tv_eyeBlinkText"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="21dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_border_cancel"
            android:text="@string/back"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
           />

        <ImageView
            android:id="@+id/iv_reverse_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/camera_icon_reverse"
            android:layout_above="@+id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="30dp"
            android:visibility="visible"/>
    </RelativeLayout>


</LinearLayout>