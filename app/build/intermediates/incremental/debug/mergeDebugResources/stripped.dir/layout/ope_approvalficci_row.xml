<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="15sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">


                <CheckBox
                    android:id="@+id/approvalCheckbox"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:text="Emp Name"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Department"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Attendance Date"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:paddingLeft="10dp" />


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_employeeName"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:paddingLeft="2dp"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_department"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_attendanceDate"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="end" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:text="In Time"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Out Time"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingLeft="15sp"
                    android:text="OPE Hours"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:id="@+id/txt_inTime"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_outTime"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:id="@+id/txt_opeHours"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:text="Amount"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:text="Status"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />


                <Spinner
                    android:id="@+id/actionButton"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_amount"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />


                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_status"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="7.2"
                    android:text="Comments"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".8" />

                <com.savvy.hrmsnewapp.customwidgets.CustomTextView
                    android:id="@+id/txt_Comments"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="7.2"
                    android:text="Label"
                    android:textColor="@color/my_custom_color"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:font="@string/font_name_light" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/color_red" />
            </LinearLayout>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>